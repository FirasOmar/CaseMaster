        @if (signInManager.IsSignedIn(User))
        {
            @await Html.PartialAsync("SideMenu")
        }
            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        @RenderBody()

                    </div> <!-- container -->

                </div> <!-- content -->
                <!-- Footer Start -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                @DateTime.Now.Year &copy; CaseMaster  <a href=""></a>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->

            </div>
        </div>
        <!-- Vendor js -->
        <script src="~/js/vendor.min.js"></script>

        <!-- Plugins js-->
        <script src="~/libs/flatpickr/flatpickr.min.js"></script>
        <script src="~/libs/jquery-knob/jquery.knob.min.js"></script>
        <script src="~/libs/jquery-sparkline/jquery.sparkline.min.js"></script>
        <script src="~/libs/flot-charts/jquery.flot.js"></script>
        <script src="~/libs/flot-charts/jquery.flot.time.js"></script>
        <script src="~/libs/flot-charts/jquery.flot.tooltip.min.js"></script>
        <script src="~/libs/flot-charts/jquery.flot.selection.js"></script>
        <script src="~/libs/flot-charts/jquery.flot.crosshair.js"></script>

        <!-- Dashboar 1 init js-->
        <script src="~/js/pages/dashboard-1.init.js"></script>

        <!-- App js-->
        <script src="~/js/app.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
