@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CaseMaster</title>
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Plugins css -->
    <link href="~/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    @if (System.Globalization.CultureInfo.CurrentCulture.Name == "ar")
    {
        <link href="~/css/app-rtl.min.css" rel="stylesheet" type="text/css" />
    }
    else
    {
        <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
    }

</head>
<body>
    <div id="wrapper">
        <div class="navbar-custom">
           
            <ul class="list-unstyled topnav-menu float-right mb-0">
                <li class="dropdown global-list show">
                    <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">

                        <span class="pro-user-name ml-1">
                            Login <i class="mdi mdi-chevron-down"></i>
                        </span>
                    </a>
                    @await Html.PartialAsync("_Culture")
                </li>
                @if (!signInManager.IsSignedIn(User))
                {
                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">

                            <span class="pro-user-name ml-1">
                                Login <i class="mdi mdi-chevron-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown ">

                            <!-- item-->
                            <a asp-controller="Account" asp-action="Login" class="dropdown-item notify-item">
                                <i class="fe-user"></i>
                                <span>Login</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <!-- item-->

                            <a asp-controller="Account" asp-action="Register" class="dropdown-item notify-item">
                                <i class="fe-log-out"></i>
                                <span>Register</span>
                            </a>
                        </div>
                    </li>


                }
                else
                {
                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <img src="~/images/users/user-1.jpg" alt="user-image" class="rounded-circle">
                            <span class="pro-user-name ml-1">
                                Geneva <i class="mdi mdi-chevron-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown ">

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item notify-item">
                                <i class="fe-user"></i>
                                <span>My Account</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <!-- item-->

                            <a asp-controller="Account" asp-action="Logout" class="dropdown-item notify-item">
                                <i class="fe-log-out"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </li>


                }
            </ul>
                <!-- LOGO -->
                <div class="logo-box">
                    <a asp-controller="Home" asp-action="Index" class="logo text-center">
                        <span class="logo-lg">
                            <img src="~/images/logo-light.png" alt="" height="18">
                            <!-- <span class="logo-lg-text-light">UBold</span> -->
                        </span>
                        <span class="logo-sm">
                            <!-- <span class="logo-sm-text-dark">U</span> -->
                            <img src="~/images/logo-sm.png" alt="" height="24">
                        </span>
                    </a>
                </div>
                @if (signInManager.IsSignedIn(User))
                {
                    <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
                        <li>
                            <button class="button-menu-mobile waves-effect waves-light">
                                <i class="fe-menu"></i>
                            </button>
                        </li>
                    </ul>
                }
            </div>
